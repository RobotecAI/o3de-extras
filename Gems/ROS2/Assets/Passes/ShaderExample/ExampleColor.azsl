#pragma once

#include <viewsrg.srgi>
#include <Atom/Features/SrgSemantics.azsli>

#define THREADS 16

ShaderResourceGroup PassSRG : SRG_PerPass
{
    Texture2D<float4> m_color;
    RWTexture2D<float4> m_outputColor;
};

[numthreads(THREADS, THREADS, 1)]
void MainCS(uint3 dID: SV_DispatchThreadID)
{
    uint2 targetPixel = dID.xy;

    float4 color = PassSRG::m_color[targetPixel];
    color.x = 1.0 - color.x;

    PassSRG::m_outputColor[targetPixel] = color;
}
